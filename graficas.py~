#recogemos el nombre del archivo.dat que entra como parametro
filename = sys.argv[1]
#cargar datos del archivo
datos = np.loadtxt(nombredatos)
#definir arreglos para graficar
x = datos[:,1]
y = datos[:,2]
#saber cuales fueron las condiciones iniciales
l=list(filename)
